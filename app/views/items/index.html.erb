<div class="w-screen md:p-5 p-2">
  <div class="md:flex items-center justify-between p-1 px-5 my-2 text-pink-600 w-full">
    <%= simple_format t('.title'), class: "font-bold md:text-4xl text-2xl mr-3 md:my-0 my-3"%>
    <div class="flex-grow">
      <%= render 'layouts/search', q: @q, url: items_path %>
    </div>
    <%= simple_format "#{@items_count.to_s}件", class: "font-semibold text-xl text-right w-1/3 hidden md:block"%>
  </div>
  <% if @items.present? %>
    <div class="min-w-full grid md:grid-cols-2 grid-cols-1">
      <%= render @items %>
    </div>
    <div class="flex items-center justify-center my-5">
      <%= paginate @items %>
    </div>
  <% else %>
    <%= simple_format 'これからの推し活はありません', class: "w-full text-center text-gray-500 p-10" %>
  <% end %>
</div>