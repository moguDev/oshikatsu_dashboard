<div class="w-screen p-5">
  <div class="flex items-center justify-between p-1 px-5 my-2 text-pink-600 w-full">
    <%= simple_format t('.title'), class: "font-bold text-4xl mr-3"%>
    <div class="flex-grow">
      <%= render 'layouts/search', q: @q, url: past_items_path %>
    </div>
    <%= simple_format "#{@items_count.to_s}件", class: "font-semibold text-xl text-right w-1/3"%>
  </div>
  <% if @items.present? %>
    <div class="min-w-full grid grid-cols-2">
      <%= render @items %>
    </div>
    <div class="flex items-center justify-center my-5">
      <%= paginate @items %>
    </div>
  <% else %>
    <%= simple_format '過去の推し活はありません', class: "w-full text-center text-gray-500 p-10" %>
  <% end %>
</div>